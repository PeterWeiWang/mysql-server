# uint global
--source include/not_windows.inc
--source include/not_embedded.inc
SET @start_global_value = @@global.thread_pool_toobusy;

#
# exists as global only
#
select @@global.thread_pool_toobusy;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
select @@session.thread_pool_toobusy;
show global variables like 'thread_pool_toobusy';
show session variables like 'thread_pool_toobusy';
select * from information_schema.global_variables where variable_name='thread_pool_toobusy';
select * from information_schema.session_variables where variable_name='thread_pool_toobusy';

#
# show that it's writable
#
set global thread_pool_toobusy=60;
select @@global.thread_pool_toobusy;
set global thread_pool_toobusy=1000;
select @@global.thread_pool_toobusy;
--error ER_GLOBAL_VARIABLE
set session thread_pool_toobusy=1;

#
# incorrect types
#
--error ER_WRONG_TYPE_FOR_VAR
set global thread_pool_toobusy=1.1;
--error ER_WRONG_TYPE_FOR_VAR
set global thread_pool_toobusy=1e1;
--error ER_WRONG_TYPE_FOR_VAR
set global thread_pool_toobusy="foo";


set global thread_pool_toobusy=-1;
select @@global.thread_pool_toobusy;
set global thread_pool_toobusy=10000000000;
select @@global.thread_pool_toobusy;

set @@global.thread_pool_toobusy = @start_global_value;
